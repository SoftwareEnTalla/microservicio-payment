{
  "name": "api.entalla.backend",
  "version": "0.0.1",
  "description": "Este proyecto es una API desarrollada con NestJS para la Empresa de Soluciones Inform√°ticas SoftwarEnTalla. Micro servicio de ${name}",
  "author": "softwarentalla@gmail.com",
  "private": true,
  "license": "Proprietary",
  "type": "commonjs",
  "scripts": {
    "typeorm": "ts-node -r tsconfig-paths/register ./src/data-source.ts",
    "build": "nest build && cp -r src/i18n dist/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_PATH=./dist jest -r tsconfig-paths/register",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@eventstore/db-client": "^6.2.1",
    "@jsverse/transloco": "^7.6.1",
    "@jsverse/transloco-utils": "^7.0.2",
    "@nestjs/apollo": "^13.0.4",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.2",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/typeorm": "^11.0.0",
    "@ngneat/transloco": "^6.0.4",
    "apollo-server-express": "^3.13.0",
    "cache-manager": "^6.4.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "esm": "^3.2.25",
    "graphql": "^16.10.0",
    "https-proxy-agent": "^7.0.6",
    "i18n": "^0.15.1",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.4",
    "nestjs-i18n": "^10.5.1",
    "object-hash": "^3.0.0",
    "passport-headerapikey": "^1.2.2",
    "pg": "^8.13.1",
    "rxjs": "^7.8.2",
    "uri-js": "^4.4.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/cache-manager": "^4.0.6",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/i18n": "^0.13.12",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.21",
    "typescript": "^5.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

